<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="General">
        <setting label="Download" type="lsep" />
        <setting id="dlpath" type="folder" label="Download Path" source="auto" option="writeable" />
        <setting id="keep_files" type="bool" label="Keep files after playback/download stops" default="false" />

        <setting label="BitTorrent options" type="lsep" />
        <setting id="max_upload_rate" label="Max Upload Rate (kB/s)" type="number" default="" />
        <setting id="max_download_rate" label="Max Download Rate (kB/s)" type="number" default="" />
        <setting id="encryption" label="Encryption" type="enum" values="Forced|Enabled|Disabled" default="Enabled" />
    </category>
    <category label="Advanced">
        <setting label="Custom domains" type="lsep"/>
        <setting id="base_eztv" type="text" label="EZTV" default="https://eztv.it" />
        <setting id="base_yify" type="text" label="YIFY Torrents" default="https://yify-torrents.com" />
        <setting id="base_kickass" type="text" label="Kickass Torrents" default="https://kickass.to" />
        <setting id="base_tpb" type="text" label="The Pirate Bay" default="https://thepiratebay.sx" />

        <setting label="Google Analytics" type="lsep"/>
        <setting id="ga_disable" type="bool" label="Disable (except for index)" default="false" />
    </category>
</settings>
